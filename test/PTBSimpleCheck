%% PTBSimpleCheck.
%    Sanity check if PTB screen commands work as expected.

% History:
%    02/20/24    smo    - Wrote it.

[window windowRect] = OpenPlainScreen([0.5 0.5 0.5]);
GetJSResp;
pause(0.5);

image = uint8(zeros(100,100,3));
imageSize = size(image);

[imageTexture imageWindowRect rng] = MakeImageTexture(image,window,windowRect);
FlipImageTexture(imageTexture,window,imageWindowRect);
GetJSResp;
pause(0.5);

CloseScreen;

imageWindowRect(3) - imageWindowRect(1)